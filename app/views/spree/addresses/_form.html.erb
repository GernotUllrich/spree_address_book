<% address_id = address_type.chars.first %>
<div class="inner" data-hook=<%="#{address_type}_inner" %>>
  <p class="field" id=<%="#{address_id}firstname" %>>
    <%= address_form.label :firstname, Spree.t(:first_name) %><span class="required">*</span><br />
    <%= address_form.text_field :firstname, :class => 'required' %>
  </p>
  <p class="field" id=<%="#{address_id}lastname" %>>
    <%= address_form.label :lastname, Spree.t(:last_name) %><span class="required">*</span><br />
    <%= address_form.text_field :lastname, :class => 'required' %>
  </p>
  <% if Spree::Config[:company] %>
      <p class="field" id=<%="#{address_id}company" %>>
        <%= address_form.label :company, Spree.t(:company) %><br />
        <%= address_form.text_field :company %>
      </p>
  <% end %>
  <p class="field" id=<%="#{address_id}address1" %>>
    <%= address_form.label :address1, Spree.t(:street_address) %><span class="required">*</span><br />
    <%= address_form.text_field :address1, :class => 'required' %>
  </p>
  <p class="field" id=<%="#{address_id}address2" %>>
    <%= address_form.label :address2, Spree.t(:street_address_2) %><br />
    <%= address_form.text_field :address2 %>
  </p>
  <p class="field" id=<%="#{address_id}city" %>>
    <%= address_form.label :city, Spree.t(:city) %><span class="required">*</span><br />
    <%= address_form.text_field :city, :class => 'required' %>
  </p>
  <p class="field" id=<%="#{address_id}country" %>>
    <%= address_form.label :country_id, Spree.t(:country) %><span class="required">*</span><br />
    <span id=<%="#{address_id}country-selection" %>>
      <%= address_form.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'required'} %>
    </span>
  </p>

  <% if Spree::Config[:address_requires_state] %>
      <p class="field" id=<%="#{address_id}state" %>>
        <% have_states = !address.country.states.empty? %>
        <%= address_form.label :state, Spree.t(:state) %><span class='required' id=<%="#{address_id}state-required"%>>*</span><br/>

        <% state_elements = [
                address_form.collection_select(:state_id, address.country.states,
                                       :id, :name,
                                       {:include_blank => true},
                                       {:class => have_states ? 'required' : 'hidden',
                                        :disabled => !have_states}) +
                        address_form.text_field(:state_name,
                                        :class => !have_states ? 'required' : 'hidden',
                                        :disabled => have_states)
        ].join.gsub('"', "'").gsub("\n", "")
        %>
        <%= javascript_tag do -%>
            $('#<%="#{address_id}state" %>').append("<%== state_elements %>");
        <% end %>
      </p>
      <noscript>
        <%= address_form.text_field :state_name, :class => 'required' %>
      </noscript>
  <% end %>

  <p class="field" id=<%="#{address_id}zipcode" %>>
    <%= address_form.label :zipcode, Spree.t(:zip) %><% if address.require_zipcode? %><span class="required">*</span><br /><% end %>
    <%= address_form.text_field :zipcode, :class => "#{'required' if address.require_zipcode?}" %>
  </p>
  <p class="field" id=<%="#{address_id}phone" %>>
    <%= address_form.label :phone, Spree.t(:phone) %><% if address.require_phone? %><span class="required">*</span><br /><% end %>
    <%= address_form.phone_field :phone, :class => "#{'required' if address.require_phone?}" %>
  </p>
  <% if Spree::Config[:alternative_shipping_phone] %>
      <p class="field" id=<%="#{address_id}altphone" %>>
        <%= address_form.label :alternative_phone, Spree.t(:alternative_phone) %><br />
        <%= address_form.phone_field :alternative_phone %>
      </p>
  <% end %>
</div>
